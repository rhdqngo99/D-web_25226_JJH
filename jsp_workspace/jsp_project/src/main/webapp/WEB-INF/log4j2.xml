<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d [%t] %5p %c{1.} - %m%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger level="INFO"/>
    <Root level="INFO">
      <AppenderRef ref="CONSOLE"/>
    </Root>
  </Loggers>

</Configuration>